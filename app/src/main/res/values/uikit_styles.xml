<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView">
        <item name="android:textColor">@color/colorTextRegular</item>
    </style>

    <style name="TextView.Large">
        <item name="android:textSize">@dimen/font_size_text_view_large</item>
    </style>

    <style name="TextView.Medium">
        <item name="android:textSize">@dimen/font_size_text_view_medium</item>
        <item name="android:fontFamily">@font/font_roboto_medium</item>
    </style>

    <style name="TextView.Regular">
        <item name="android:textSize">@dimen/font_size_text_view_regular</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:textSize">@dimen/font_size_text_view_title</item>
    </style>

    <style name="TitledTextLayout"></style>

    <style name="TextViewContainer">
        <item name="android:paddingLeft">@dimen/horizontal_padding_text_view</item>
        <item name="android:paddingRight">@dimen/horizontal_padding_text_view</item>
        <item name="android:paddingTop">@dimen/vertical_padding_text_view</item>
        <item name="android:paddingBottom">@dimen/vertical_padding_text_view</item>
    </style>

    <style name="ItemView"></style>

    <style name="ItemView.Container">
        <item name="android:layout_marginLeft">@dimen/horizontal_margin_item_view</item>
        <item name="android:layout_marginRight">@dimen/horizontal_margin_item_view</item>
    </style>

    <style name="ItemView.TopView">
        <item name="android:paddingTop">@dimen/vertical_padding_bill_item_view</item>
    </style>

    <style name="ItemView.BottomView">
        <item name="android:paddingBottom">@dimen/vertical_padding_bill_item_view</item>
    </style>

    <style name="FloatingActionButton">
        <item name="android:layout_margin">@dimen/margin_floating_action_button</item>
    </style>

    <style name="FloatingActionButton.Add">
        <item name="android:src">@drawable/vec_add</item>
    </style>

    <style name="CircularImageViewContainer">
        <item name="android:layout_margin">@dimen/space_regular</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:background">@drawable/circular_image_view_background_circle</item>
    </style>

    <style name="PrimaryToolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/colorWhite</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Button.Regular">
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="HorizontalDelimiter">
        <item name="android:background">@color/colorDelimiter</item>
        <item name="android:layout_marginLeft">@dimen/space_large</item>
    </style>
</resources>