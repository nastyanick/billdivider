<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="MainTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/colorWhite</item>
        <item name="tabTextAppearance">@style/RootTabItemText</item>
        <item name="tabIndicatorColor">@color/colorWhite</item>
    </style>

    <style name="RootTabItemText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
