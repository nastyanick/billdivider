<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragmentBillWizardPositionMaterialButtonAddMore"
        style="@style/MaterialButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_more"
        app:icon="@drawable/vec_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragmentBillWizardPositionMaterialButtonDone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragmentBillWizardPositionMaterialButtonDone"
        style="@style/MaterialButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/done"
        app:backgroundTint="@color/green_a700"
        app:icon="@drawable/vec_done_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/fragmentBillWizardPositionMaterialButtonAddMore"
        app:layout_constraintRight_toRightOf="@id/fragmentBillWizardPositionMaterialButtonAddMore" />

</androidx.constraintlayout.widget.ConstraintLayout>